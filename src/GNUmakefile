################################################################################
BINS = sugar1 sugar2 wc rps

################################################################################
GHCFLAGS = -Wall -O2 -optl-s
CFLAGS = -Wall -s

################################################################################
.PHONEY: all clean

################################################################################
all: $(BINS)

################################################################################
clean:
	rm -f $(BINS) *.hi *.o

################################################################################
# Compile Haskell code.
%: %.hs
	ghc $(GHCFLAGS) $<
